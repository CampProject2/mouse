<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/B1"
            android:backgroundTint="@color/material_on_surface_stroke"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="1" />

        <Button
            android:id="@+id/B2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/material_on_surface_stroke"
            android:text="2"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/B3"
            android:backgroundTint="@color/material_on_surface_stroke"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="3" />

        <Button
            android:id="@+id/B4"
            android:backgroundTint="@color/material_on_surface_stroke"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="4" />

        <Button
            android:id="@+id/B5"
            android:backgroundTint="@color/material_on_surface_stroke"
            android:layout_width="0dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5" />

        <Button
            android:id="@+id/B6"
            android:backgroundTint="@color/material_on_surface_stroke"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="6" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:orientation="horizontal">

        <Button
            android:id="@+id/B7"
            android:backgroundTint="@color/material_on_surface_stroke"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="7" />

        <Button
            android:id="@+id/B8"
            android:layout_width="0dp"
            android:backgroundTint="@color/material_on_surface_stroke"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="8" />

        <Button
            android:id="@+id/B9"
            android:layout_width="0dp"
            android:backgroundTint="@color/material_on_surface_stroke"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="9" />

        <Button
            android:id="@+id/B10"
            android:layout_width="0dp"
            android:backgroundTint="@color/material_on_surface_stroke"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="10" />

        <Button
            android:id="@+id/B11"
            android:layout_width="0dp"
            android:backgroundTint="@color/material_on_surface_stroke"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="11" />

        <Button
            android:id="@+id/B12"
            android:layout_width="0dp"
            android:textSize="20dp"
            android:backgroundTint="@color/material_on_surface_stroke"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="12" />

        <Button
            android:id="@+id/Bj"
            android:layout_width="0dp"
            android:textSize="20dp"
            android:backgroundTint="@color/material_on_surface_stroke"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="j" />

    </LinearLayout>
</LinearLayout>
